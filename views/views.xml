<?xml version="1.0"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.pos_search_credit_notes</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//block[@id='pos_interface_section']" position='inside'>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_searching_credit_notes" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_searching_credit_notes"
                                string="Enable Search Credit Notes" />
                            <div class="text-muted">
                                Enable Search Credit Notes for fast assistance.
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>